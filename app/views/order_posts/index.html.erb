<p id="notice"><%= notice %></p>

<h1>Listing Order Posts</h1>

<table>
  <thead>
    <tr>
      <th>Post</th>
      <th>Cart</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_posts.each do |order_post| %>
      <tr>
        <td><%= order_post.post_id %></td>
        <td><%= order_post.cart_id %></td>
        <td><%= link_to 'Show', order_post %></td>
        <td><%= link_to 'Edit', edit_order_post_path(order_post) %></td>
        <td><%= link_to 'Destroy', order_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

